            <Line x:Name="d200m"
                X1="0" Y1="450" 
                  X2="650" Y2="450"
                  StrokeThickness="1" Stroke="#FF335728">
            </Line>
            <Line x:Name="d10m"
                X1="0" Y1="550" 
                  X2="650" Y2="550"
                  StrokeThickness="1" Stroke="#FF335728">
            </Line>
            <Line x:Name="Phuong_vi_vuong_goc_duoi"
                X1="0" Y1="650" 
                  X2="650" Y2="650"
                  StrokeThickness="2" Stroke="#FF038625">
            </Line>
            <Line x:Name="cu_ly_vuong_goc"
                  X1="0" Y1="0"
                  X2="0" Y2="650"
                  StrokeThickness="2">
                <Line.Stroke>
                    <SolidColorBrush Color="#FFFF5C00" Opacity="0.5"/>
