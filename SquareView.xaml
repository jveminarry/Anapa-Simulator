      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Anapa_Simulator"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SquareView" Width="700" Height="740">

    <Grid Background="Black">
        <!--<Border BorderBrush="#FFA6A6A6" BorderThickness="5" HorizontalAlignment="Left" Height="720" VerticalAlignment="Top" Width="700"/>-->
        <Canvas Width="650" Height="650" Margin="27,32,23,58">
            <Canvas.Background>
                <ImageBrush ImageSource="noisesquare_1.jpg"/>
            </Canvas.Background>
            <Line x:Name="Phuong_vi_vuong_goc"
                X1="0" Y1="0" 
                  X2="650" Y2="0"
                  StrokeThickness="2">
                <Line.Stroke>
                    <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0" Opacity="0.5">
                        <LinearGradientBrush.RelativeTransform>
                            <TransformGroup>
                                <ScaleTransform CenterY="0.5" CenterX="0.5"/>
                                <SkewTransform CenterY="0.5" CenterX="0.5"/>
                                <RotateTransform Angle="90" CenterY="0.5" CenterX="0.5"/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </LinearGradientBrush.RelativeTransform>
                        <GradientStop Color="#FFFF5C00" Offset="0.507"/>
                        <GradientStop Color="#FF2DA300" Offset="0.501"/>
                    </LinearGradientBrush>
                </Line.Stroke>

            </Line>
            <Line x:Name="d600m"
                X1="0" Y1="50" 
                  X2="650" Y2="50"
                  StrokeThickness="1" Stroke="#FF335728">
