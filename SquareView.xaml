                </Line.Stroke>
            </Line>
            <Line x:Name="m90_degree"
                  X1="162.5" Y1="0"
                  X2="162.5" Y2="650"
                  StrokeThickness="2">
                <Line.Stroke>
                    <SolidColorBrush Color="#FF335728" Opacity="0.5"/>
                </Line.Stroke>
            </Line>
            <Line x:Name="p90_degree"
                  X1="487.5" Y1="0"
                  X2="487.5" Y2="650"
                  StrokeThickness="2">
                <Line.Stroke>
                    <SolidColorBrush Color="#FF335728" Opacity="0.5"/>
                </Line.Stroke>
            </Line>
            <Line x:Name="zero_degree"
                  X1="325" Y1="0"
                  X2="325" Y2="650"
                  StrokeThickness="2">
                <Line.Stroke>
                    <SolidColorBrush Color="#FF335728" Opacity="0.5"/>
                </Line.Stroke>
            </Line>
            <TextBlock x:Name="r600square" TextWrapping="Wrap" Text="600" Canvas.Top="44" Foreground="White" FontFamily="Helvetica" Canvas.Left="-24"/>
